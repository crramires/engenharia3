import axios from "axios";

class Api{
    static async getWeather(town){
        const response = new Weather (await (await axios.get(`https://api.hgbrasil.com/weather?key=888eb4fc&city_name=${town}`)).data.results);
        return response;
    }
}   

class Weather{
    constructor({city, time, temp, description}){
        this.city = city,
        this.temp = temp,
        this.time = time,
        this.description = description,
    }
}

Api.getWeather('Pelotas').then((value => {console.log(value)}))
